\newcommand{\runningheads}[2]{
	\fancyhead[L]{
		\begin{tabular}{l}
			\LARGE \textbf{\textsc{#1}} \\
			\large #2
		\end{tabular}
	}
	\fancyhead[R]{
		\begin{tabular}{r}
			16-124-836 \\
			Marcel \textsc{Zauder}
		\end{tabular}
	}
}
